@model IEnumerable<SoLienLacDienTu.Models.QLLM>
@{
    ViewBag.Title = "QLLM";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>QLD</h2>
<div id="layoutSidenav" style="margin-left:0">
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <div class="card mb-4">
                    <div class="card-header"><i class="fas fa-table mr-1"></i>DataTable</div>

                    <div class="card-body">
                        <div class="col-12">
                            <div class="col-2" style="float:left">
                                @using (Html.BeginForm("QLLM", "HomeAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <input type="file" name="file" />
                                    <br />
                                    <input type="submit" value="Import to database" class="btn btn-primary" />
                                }
                            </div>
                            <div class="col-2" style="float:left;padding-top:2.3%">
                                <a class="btn btn-primary" href="@Url.Action("ExcelToLLM","HomeAdmin")">Export Excel</a>

                            </div>
                        </div>
         
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Mã lớp môn</th>
                                        <th>Lớp</th>
                                        <th>Mã môn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var i in Model)
                                        {
                                            <tr>
                                                <td>@i.MaLM</td>
                                                <td>@i.Lop</td>
                                                <td>@i.MaMon</td>
                                           
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
