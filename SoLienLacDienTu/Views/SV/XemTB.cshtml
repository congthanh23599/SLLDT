    Layout = "~/Views/Shared/_GDSinhVien.cshtml";
}

<div class="portfolio-info">
    <h3>Thông Tin Thong Bao</h3>

    <div class="col-lg-12" style="padding-left:0px;padding-right:0px">
        @*<div class="col-lg-12 " style="background:rgba(0, 0, 0, 0.72);color:white;padding:0px">
            <span style="padding-left:7%" id="ctl00_ContentPlaceHolder1_ctl00_lbltieudetkb" class="Label"></span>

        </div>*@

    </div>
    <table cellspacing="0" cellpadding="0" class="title-table" style="border-color:black;border-width:1px;border-style:Solid;height:100px;width:100%;border-collapse:collapse;background:#54b9f7">
        <tbody>
            <tr align="center">
                <td width="63px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                </td>
                <td width="63px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                    <span id="ctl00_ContentPlaceHolder1_ctl00_lblMaMH" title="Mã Môn Học" class="Label">Mã Giảng Viên</span>
                </td>
                @*<td width="200px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                    <span id="ctl00_ContentPlaceHolder1_ctl00_lblTenMH" title="Tên Môn Học" class="Label">Tên Giảng viên</span>
                </td>*@
                <td width="35px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                    <span id="ctl00_ContentPlaceHolder1_ctl00_lblTTH" title="Thực Hành" class="Label">Nội Dung</span>
                </td>
                <td width="25px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                    <span id="ctl00_ContentPlaceHolder1_ctl00_lblThu" title="Thứ" class="Label">Ngày Đăng</span>
                </td>
                <td width="90px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                    <span id="ctl00_ContentPlaceHolder1_ctl00_lblST" title="Số Tiết" class="Label">Mã lớp </span>
                </td>
                <td width="28px" style="color:White;background-color:#6699CC;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                    <span id="ctl00_ContentPlaceHolder1_ctl00_lblPhong" title="Phòng Học" class="Label">Lớp môn</span>
                </td>
            </tr>
            @{ int i = 0;}

            @foreach (var item in Model)
            {
                <tr align="center" style="overflow:scroll;background:white;">
                    <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @{i = i + 1; }
                        @i
                    </td>

                    <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @item.MaGV

                    </td>
                   @* <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @item.TenGV
                    </td>*@
                    <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @item.NoiDung
                    </td>
                    <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @item.NgayDang
                    </td>
                    <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @item.MaLop
                    </td>

                    <td style="color:Black;height:25px;border-width:1px;border-style:solid;font-size:11px;height:18px;width:25px;white-space:nowrap;">
                        @item.MaLM
                    </td>


                </tr>

            }
        </tbody>
    </table>
